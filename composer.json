{
    "name": "bluefreelance/core",
    "type": "library",
    "description": "Core for blue project",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Mickael Darras",
            "email": "darras.mickael@gmail.com"
        }
    ],
    "autoload": {
      "psr-4": {
        "BlueBase\\": "src/"
      },
      "files": [
        "src/functions.php"
      ]
    },
    "autoload-dev": {
        "psr-4": {
            "BlueCore\\": "src/"
        }
    },
    "require": {
      "php": ">=7.2.0",
      "twig/twig": "3.0"
    },
    "require-dev": {
      "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
      "check": [
        "@test",
        "@cs-check"
      ],
      "cs-check": "phpcs",
      "cs-fix": "phpcbf"
    }
}
