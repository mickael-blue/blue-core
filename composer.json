{
    "name": "miixdev/bluebase",
    "type": "library",
    "description": "Base for blue project",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Mickael Darras",
            "email": "mickael@freelance.blue"
        }
    ],
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "require": {
      "php": ">=7.2.0",
      "twig/twig": "3.0",
      "symfony/dotenv": "^5.0"
    },
    "require-dev": {
      "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
      "check": [
        "@test",
        "@cs-check"
      ],
      "cs-check": "phpcs",
      "cs-fix": "phpcbf"
    }
}
